    <SplitView
        Background="{DynamicResource BackgroundBrush}"
        DisplayMode="Overlay"
        IsPaneOpen="True"
        PaneBackground="Transparent">
        <SplitView.Pane>
            <Viewbox HorizontalAlignment="Left" VerticalAlignment="Stretch">
                <Canvas Height="920" Width="180">
                    <Border
                        Background="{DynamicResource PanelBrush}"
                        BorderThickness="0"
                        Canvas.Left="0"
                        Height="920"
                        Name="LeftBorder"
                        Opacity="0.95"
                        Width="166">
                        <!-- <Border.Effect> -->
                        <!--  <DropShadowEffect  -->
                        <!--  BlurRadius="10"  -->
                        <!--  Color="{DynamicResource BoxShadowBrush}"  -->
                        <!--  OffsetX="0"  -->
                        <!--  OffsetY="0" />  -->
                        <!-- </Border.Effect> -->
                    </Border>
                    <StackPanel
                        Canvas.Bottom="31"
                        Canvas.Left="31"
                        Canvas.Right="31"
                        Canvas.Top="31"
                        Spacing="43">
                        <ToggleButton
                            Background="Transparent"
                            Checked="SwitchToDarkTheme"
                            Content="{DynamicResource GPUIcon}"
                            CornerRadius="20"
                            Height="90"
                            Margin="8"
                            Padding="4"
                            ToolTip.ShowDelay="700"
                            ToolTip.Tip="GPU mode"
                            Unchecked="SwitchToLightTheme"
                            Width="90" />
                        <Button
                            Classes="menuToggleButton"
                            Name="ImportButton"
                            ToolTip.ShowDelay="700"
                            ToolTip.Tip="Import">
                            <Image Source="/Assets/importLight.png" />
                            <Button.Flyout>
                                <Flyout
                                    FlyoutPresenterClasses="flyout"
                                    HorizontalOffset="667"
                                    VerticalOffset="142">
                                    <TextBox Watermark="Full path to upload image" />
                                </Flyout>
                            </Button.Flyout>
                        </Button>
                        <Button
                            Classes="menuToggleButton"
                            Name="FilterButton"
                            ToolTip.ShowDelay="700"
                            ToolTip.Tip="Filter">
                            <Image Source="/Assets/filterLight.png" />
                            <Button.Flyout>
                                <MenuFlyout
                                    FlyoutPresenterClasses="menuFlyout"
                                    HorizontalOffset="22"
                                    Placement="Right">
                                    <Panel>
                                        <Border
                                            Classes="menuBorder"
                                            HorizontalAlignment="Center"
                                            Name="FilterBorder"
                                            VerticalAlignment="Center">
                                            <StackPanel>
                                                <MenuItem Classes="flyoutItem" Header="Gaussian Blur" />
                                                <MenuItem Classes="flyoutItem" Header="Edges" />
                                                <MenuItem Classes="flyoutItem" Header="Darken" />
                                                <MenuItem Classes="flyoutItem" Header="Lighten" />
                                                <MenuItem Classes="flyoutItem" Header="Sharpen" />
                                            </StackPanel>
                                        </Border>
                                        <Rectangle
                                            Classes="rectangularWithShadow"
                                            Height="{Binding #FilterBorder.Height}"
                                            Width="2" />
                                    </Panel>
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>
                        <Button
                            Classes="menuToggleButton"
                            Name="FlipButton"
                            ToolTip.ShowDelay="700"
                            ToolTip.Tip="Flip">
                            <Image Source="/Assets/flipLight.png" />
                            <Button.Flyout>
                                <MenuFlyout
                                    FlyoutPresenterClasses="menuFlyout"
                                    HorizontalOffset="{Binding #LeftBorder.Width}"
                                    Placement="Right"
                                    PlacementAnchor="VerticalMask">
                                    <Panel>
                                        <Border
                                            Classes="menuBorder"
                                            HorizontalAlignment="Center"
                                            Name="FlipBorder"
                                            VerticalAlignment="Center">
                                            <StackPanel>
                                                <MenuItem Classes="flyoutItem" Header="Vertical" />
                                                <MenuItem Classes="flyoutItem" Header="Horizontal" />
                                            </StackPanel>
                                        </Border>
                                        <Rectangle
                                            Classes="rectangularWithShadow"
                                            Height="{Binding #FlipBorder.Height}"
                                            Width="2" />
                                    </Panel>
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>
                        <Button
                            Classes="menuToggleButton"
                            Name="RotateButton"
                            ToolTip.ShowDelay="700"
                            ToolTip.Tip="Rotate">
                            <Image Source="/Assets/rotateLight.png" />
                            <Button.Flyout>
                                <MenuFlyout
                                    FlyoutPresenterClasses="menuFlyout"
                                    HorizontalOffset="28.4"
                                    Placement="Right">
                                    <Panel>
                                        <Border
                                            Classes="menuBorder"
                                            HorizontalAlignment="Center"
                                            Name="RotateBorder"
                                            VerticalAlignment="Center">
                                            <StackPanel>
                                                <MenuItem Classes="flyoutItem" Header="Clockwise" />
                                                <MenuItem Classes="flyoutItem" Header="Counterclockwise" />
                                            </StackPanel>
                                        </Border>
                                        <Rectangle
                                            Classes="rectangularWithShadow"
                                            Height="{Binding #RotateBorder.Height}"
                                            Width="2" />
                                    </Panel>
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>
                        <Button
                            Classes="menuToggleButton"
                            Name="SaveButton"
                            ToolTip.ShowDelay="700"
                            ToolTip.Tip="Save">
                            <Image Source="/Assets/saveLight.png" />
                            <Button.Flyout>
                                <Flyout
                                    FlyoutPresenterClasses="flyout"
                                    HorizontalOffset="667"
                                    VerticalOffset="-459">
                                    <TextBox Watermark="Full path to save the image" />
                                </Flyout>
                            </Button.Flyout>
                        </Button>
                    </StackPanel>
                </Canvas>
            </Viewbox>
        </SplitView.Pane>

        <Canvas>
            <Rectangle
                Canvas.Left="160"
                Classes="rectangularWithShadow"
                Height="920"
                Width="10" />
            <Viewbox
                Canvas.Left="200"
                Height="920"
                Stretch="UniformToFill"
                Width="1000">
                <Image
                    Height="920"
                    Source="/Assets/david-clode-a0F4kX9nLBU-unsplash.jpg"
                    Width="1000" />
            </Viewbox>
            <!-- <Border Classes="saveButtonBorder inputBorder"> -->
            <!--     <TextBox Watermark="Full path to directory to save image" /> -->
            <!-- </Border> -->
        </Canvas>
    </SplitView>

