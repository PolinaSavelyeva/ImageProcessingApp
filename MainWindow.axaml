<Window
    Background="Transparent"
    Icon="/Assets/logo.ico"
    Title="ImageProcessingApp"
    d:DesignHeight="920"
    d:DesignWidth="1500"
    mc:Ignorable="d"
    x:Class="ImageProcessingApp.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="BackgroundBrush">#F3F3F3</SolidColorBrush>
                    <SolidColorBrush x:Key="PanelBrush">#FFFFFF</SolidColorBrush>
                    <SolidColorBrush x:Key="MenuFlyoutBorderBrush">#EFEFEF</SolidColorBrush>
                    <SolidColorBrush x:Key="MenuFlyoutBackgroundBrush">#f7f7f7</SolidColorBrush>
                    <Color x:Key="BoxShadowBrush">#cccccc</Color>
                    <Image Source="/Assets/GPUModeDark.png" x:Key="GPUIcon" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="BackgroundBrush">#444444</SolidColorBrush>
                    <SolidColorBrush x:Key="PanelBrush">#0A0A0A</SolidColorBrush>
                    <Color x:Key="BoxShadowBrush">Black</Color>
                    <SolidColorBrush x:Key="MenuFlyoutBorderBrush">Black</SolidColorBrush>
                    <SolidColorBrush x:Key="MenuFlyoutBackgroundBrush">#0A0A0A</SolidColorBrush>
                    <Image Source="/Assets/GPUModeLight.png" x:Key="GPUIcon" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.Styles>
        <Style Selector="Button.menuButton">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="Height" Value="66" />
            <Setter Property="Margin" Value="20" />
            <Setter Property="Padding" Value="7" />
            <Setter Property="Width" Value="66" />
        </Style>
        <Style Selector="MenuFlyoutPresenter.menuFlyout">
            <Setter Property="Background" Value="{DynamicResource MenuFlyoutBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource MenuFlyoutBorderBrush}" />
            <Setter Property="CornerRadius" Value="0 10 10 0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="54" />
            <Setter Property="MinWidth" Value="240" />
            <Setter Property="Opacity" Value="1" />
        </Style>
        <Style Selector="Border.test">
            <Setter Property="Background" Value="{DynamicResource MenuFlyoutBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource MenuFlyoutBorderBrush}" />
            <Setter Property="CornerRadius" Value="0 10 10 0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="54" />
            <Setter Property="MinWidth" Value="240" />
            <Setter Property="MinHeight" Value="240" />
            <Setter Property="Opacity" Value="1" />
        </Style>
        <Style Selector="MenuItem.flyout">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontFamily" Value="Inter" />
            <Setter Property="Margin" Value="7" />
            <Setter Property="FontWeight" Value="500" />
        </Style>
        <Style Selector="ToolTip">
            <Setter Property="Background" Value="#f3f3f3" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontFamily" Value="Inter" />
            <Setter Property="FontWeight" Value="500" />
            <Setter Property="Foreground" Value="#989898" />
        </Style>

    </Window.Styles>

    <SplitView
        Background="{DynamicResource BackgroundBrush}"
        DisplayMode="Overlay"
        IsPaneOpen="True"
        PaneBackground="Transparent">
        <SplitView.Pane>
            <Viewbox HorizontalAlignment="Left">
                <Canvas Height="920" Width="180">
                    <Border
                        Background="{DynamicResource PanelBrush}"
                        BorderThickness="0"
                        Canvas.Left="0"
                        Opacity="0.8"
                        Height="920"
                        Width="166">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="10"
                                Color="{DynamicResource BoxShadowBrush}"
                                OffsetX="0"
                                OffsetY="0" />
                        </Border.Effect>
                    </Border>
                    <StackPanel Spacing="43" Canvas.Left="31" Canvas.Top="31" Canvas.Bottom="31" Canvas.Right="31">
                        <ToggleButton
                            Background="Transparent"
                            Checked="SwitchToDarkTheme"
                            Content="{DynamicResource GPUIcon}"
                            CornerRadius="20"
                            Height="90"
                            Margin="8"
                            Padding="4"
                            ToolTip.ShowDelay="700"
                            ToolTip.Tip="GPU mode"
                            Unchecked="SwitchToLightTheme"
                            Width="90" />
                        <Button
                            Classes="menuButton"
                            ToolTip.ShowDelay="700"
                            ToolTip.Tip="Import"
                            Click="{ImportBorder.is}">
                            <Image Source="/Assets/importLight.png" />
                        </Button>
                        <Button
                            Classes="menuButton"
                            ToolTip.ShowDelay="700"
                            ToolTip.Tip="Filter">
                            <Image Source="/Assets/filterLight.png" />
                            <Button.Flyout>
                                <MenuFlyout FlyoutPresenterClasses="menuFlyout" Placement="Right">

                                    <MenuItem Classes="flyout" Header="Gaussian Blur" />
                                    <MenuItem Classes="flyout" Header="Edges" />
                                    <MenuItem Classes="flyout" Header="Darken" />
                                    <MenuItem Classes="flyout" Header="Lighten" />
                                    <MenuItem Classes="flyout" Header="Sharpen" />
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>
                        <Button
                            Classes="menuButton"
                            ToolTip.ShowDelay="700"
                            ToolTip.Tip="Flip">
                            <Image Source="/Assets/flipLight.png" />
                            <Button.Flyout>
                                <MenuFlyout FlyoutPresenterClasses="menuFlyout" Placement="Right">
                                    <MenuItem Classes="flyout" Header="Vertical" />
                                    <MenuItem Classes="flyout" Header="Horizontal" />
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>
                        <Button
                            Classes="menuButton"
                            ToolTip.ShowDelay="700"
                            ToolTip.Tip="Rotate">
                            <Image Source="/Assets/rotateLight.png" />
                            <Button.Flyout>
                                <MenuFlyout FlyoutPresenterClasses="menuFlyout" Placement="Right">
                                    <MenuItem Classes="flyout" Header="Clockwise" />
                                    <MenuItem Classes="flyout" Header="Counterclockwise" />
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>
                        <Button
                            Classes="menuButton"
                            ToolTip.ShowDelay="700"
                            ToolTip.Tip="Save">
                            <Image Source="/Assets/saveLight.png" />
                        </Button>
                    </StackPanel>
                </Canvas>
            </Viewbox>
        </SplitView.Pane>
        <Canvas>
        <Viewbox Stretch="UniformToFill" Width="1500">
            <Image
                Height="1000"
                Margin="20"
                Source="/Assets/ramin-talebi-rFRfxVM606s-unsplash 1.png"
                Width="1000" />
        </Viewbox>
            <Border Name="ImportBorder"
                    IsVisible="False" 
                    Canvas.Left="112"
                    BorderThickness="0" 
                    Canvas.Top="160"
                    BoxShadow="2 4 9 -5 Black"
                    Classes="test"> <TextBox Watermark="Path to image" /> </Border>
        </Canvas>

    </SplitView>
</Window>
